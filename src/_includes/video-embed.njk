{% comment %}
  Reusable Vimeo embed component
  Parameters:
  - vimeoId: Vimeo video ID
  - poster: Optional poster image URL
  - autoplay: Boolean, default false
  - loop: Boolean, default false
  - muted: Boolean, default true
  - lazy: Boolean, default true
  - title: Video title for accessibility
{% endcomment %}

<div class="video-embed-wrapper" data-lazy="{% if lazy %}true{% else %}false{% endif %}">
  {% if lazy %}
    <div class="video-poster" {% if poster %}style="background-image: url('{{ poster }}');"{% endif %}>
      <button class="video-play-button" aria-label="Play {% if title %}{{ title }}{% else %}video{% endif %}">
        <svg width="68" height="48" viewBox="0 0 68 48" aria-hidden="true">
          <path d="M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.63-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z" fill="#212121" fill-opacity="0.8"></path>
          <path d="M 45,24 27,14 27,34" fill="#fff"></path>
        </svg>
      </button>
    </div>
    <div class="video-iframe-container" style="display: none;">
      <iframe 
        src=""
        data-src=""
        frameborder="0" 
        allow="autoplay; fullscreen; picture-in-picture" 
        allowfullscreen
        title="{% if title %}{{ title }}{% else %}Video{% endif %}"
        loading="lazy"
        aria-label="{% if title %}{{ title }}{% else %}Video{% endif %}">
      </iframe>
    </div>
  {% else %}
    <div class="video-iframe-container">
      <iframe 
        src=""
        frameborder="0" 
        allow="autoplay; fullscreen; picture-in-picture" 
        allowfullscreen
        title="{% if title %}{{ title }}{% else %}Video{% endif %}"
        loading="lazy"
        aria-label="{% if title %}{{ title }}{% else %}Video{% endif %}">
      </iframe>
    </div>
  {% endif %}
</div>

